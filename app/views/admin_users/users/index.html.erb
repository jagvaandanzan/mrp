<div class="content-wrapper">
  <section class="content-header align-left padding-15">
    <h1> <%= t('titles.users') %> (<%= t('titles.total') %>ï¼š<%= @users.total_count %>)</h1>
  </section>

  <div class="action-buttons">
    <%= link_to t('controls.button.create'), new_admin_users_user_path, class: 'btn btn-warning' %>

    <%= button_tag t('controls.button.search'), class: 'btn blck-btn', data: {toggle: 'modal', target: '#model-user-search'} %>
  </div>

  <section class="content container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <%= get_search_criteria([@sname, t('activerecord.attributes.user.name')], [@semail, t('activerecord.attributes.user.email')], [@sphone, t('activerecord.attributes.user.phone')]) %>

          <%= render 'layouts/flash_message' %>

          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tr>
                <th class="th-center va-mid"><%= t('activerecord.attributes.user.name') %></th>
                <th class="th-center va-mid"><%= t('activerecord.attributes.user.user_position') %></th>
                <th class="th-center va-mid"><%= t('activerecord.attributes.user.user_permission') %></th>
                <th class="th-center va-mid"><%= t('activerecord.attributes.user.email') %></th>
                <th class="th-center va-mid"><%= t('activerecord.attributes.user.phone') %></th>
                <th class="th-center va-mid"></th>
              </tr>
              <% @users.each do |user| %>
                <tr>
                  <td class="td-center va-mid underline"><%= link_to user.name, admin_users_user_path(user) %></td>
                  <td class="td-center va-mid"><%= user.user_position.name %></td>
                  <td class="td-center va-mid"><%= user.user_permission.name %></td>
                  <td class="td-center va-mid"><%= user.email %></td>
                  <td class="td-center va-mid"><%= user.phone %></td>
                  <td class="td-center va-mid">
                    <%= link_to t('titles.user_sign_in'), user_sign_in_admin_users_user_path(user), class: 'btn-sm btn-primary no-underline', target: '_blank' %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
        <%= paginate @users %>
      </div>
    </div>
  </section>
  <%= render 'modal_user_search', search_name: @sname, search_email: @semail , search_phone: @sphone %>
</div>
