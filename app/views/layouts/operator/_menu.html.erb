<aside class="main-sidebar sidebar_fixed">
  <section class="sidebar">
    <ul class="sidebar-menu" data-widget="tree">
      <%= content_tag :li, class: controller_name == 'product_sale_call' ? 'active' : '' do %>
        <%= link_to operators_product_sale_calls_path do %>
          <i class="fa fa-phone"></i><span><%= t('titles.product_sale_calls') %></span>
        <% end %>
      <% end %>

      <%= content_tag :li, class: controller_name == 'product_sales' ? 'active' : '' do %>
        <%= link_to operators_product_sales_path do %>
          <i class="fa fa-shopping-cart"></i><span><%= t('titles.product_sales') %></span>
        <% end %>
      <% end %>

    </ul>
  </section>
</aside>