<tr class="nested-fields">
  <td class="va-mid">
    <%= field_errors f.object, :phone %>
    <%= f.number_field :phone, min: 0, step: 1, class: 'form-control field', placeholder: t('activerecord.attributes.bonus_phone.phone') %>
  </td>
  <td class="remove va-mid">
    <%= link_to_remove_association f, data: {confirm: t('are_you_sure')} do %>
      <%= nested_remove_btn %>
    <% end %>
  </td>
</tr>