<% if @list.present? %>
$('#<%= @select_id %>').val("");
$('#div_status_sub').removeClass('none')
    .find('select').html("<%= escape_javascript options_for_select @list.all.collect{|l| [l.name, l.id]}.insert(0, [t('controls.select.none'),""])  %>").selectpicker("refresh");
<% else %>
$('#<%= @select_id %>').val(<%= @id %>);
$('#div_status_sub').addClass('none');
<% end %>