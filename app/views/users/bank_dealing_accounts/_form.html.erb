<div class="content-wrapper">
  <section class="content-header">
    <h1><%= t('activerecord.models.bank_dealing_account') + t(@bank_dealing_account.persisted? ? 'titles.edit' : 'titles.add') %></h1>
  </section>
  <section class="content">
    <div class="box box-info">
      <%= form_for :bank_dealing_account, url: @bank_dealing_account.persisted? ? users_bank_dealing_account_path : users_bank_dealing_accounts_path, method: @bank_dealing_account.persisted? ? :patch : :post, local: true, :html => {class: 'form-horizontal'} do |f| %>
        <%= form_body do %>
          <div class="form-group">
            <%= f.label :code, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@bank_dealing_account, :code) %>">
              <%= field_errors(@bank_dealing_account, :code) %>
              <%= f.number_field :code, class: 'form-control', placeholder: t('activerecord.attributes.bank_dealing_account.code') %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :name, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@bank_dealing_account, :name) %>">
              <%= field_errors(@bank_dealing_account, :name) %>
              <%= f.text_field :name, class: 'form-control', placeholder: t('activerecord.attributes.bank_dealing_account.name') %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :account, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@bank_dealing_account, :account) %>">
              <%= field_errors(@bank_dealing_account, :account) %>
              <%= f.text_field :account, class: 'form-control', placeholder: t('activerecord.attributes.bank_dealing_account.account') %>
            </div>
          </div>
          <div class="action-buttons">
            <%= f.submit t('controls.button.save'), class: 'btn btn-warning' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
</div>