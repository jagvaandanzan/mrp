<div class="content-wrapper">
  <section class="content-header">
    <h1><%= t('activerecord.models.brand') + t(@brand.persisted? ? 'titles.edit' : 'titles.add') %></h1>
  </section>
  <section class="content">
    <div class="box box-info">
      <%= form_for :brand, url: @brand.persisted? ? users_brand_path : users_brands_path, method: @brand.persisted? ? :patch : :post, local: true, :html => {class: 'form-horizontal'} do |f| %>
        <%= form_body do %>
          <div class="form-group">
            <%= f.label :logo, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@brand, :logo) %>">
              <%= f.file_field :logo, accept: "image/*", class: 'image-file none-force' %>
              <%= field_errors(@brand, :logo) %>
              <div class="preview noselect">
                <% if @brand.logo.present? %>
                  <%= image_tag @brand.logo.url(:tumb), class: 'preview-img' %>
                <% else %>
                  <span class="text"><%= t('upload_image') %></span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :name, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@brand, :name) %>">
              <%= field_errors(@brand, :name) %>
              <%= f.text_field :name, class: 'form-control', placeholder: t('activerecord.attributes.brand.name') %>
            </div>
          </div>

          <div class="action-buttons">
            <%= f.submit t('controls.button.save'), class: 'btn btn-warning' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
</div>
<script !src="">
    load_image_preview('.content')
</script>