<div class="content-wrapper">
  <section class="content-header">
    <h1><%= t('activerecord.models.fb_comment_action') + t(@fb_comment_action.persisted? ? 'titles.edit' : 'titles.add') %></h1>
  </section>
  <section class="content">
    <div class="box box-info">
      <%= form_for :fb_comment_action, url: @fb_comment_action.persisted? ? users_fb_comment_action_path : users_fb_comment_actions_path, method: @fb_comment_action.persisted? ? :patch : :post, local: true, :html => {class: 'form-horizontal'} do |f| %>
        <%= form_body do %>
          <div class="form-group">
            <%= f.label :is_active, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@fb_comment_action, :is_active) %>">
              <%= field_errors(@fb_comment_action, :is_active) %>
              <%= f.check_box :is_active %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :comment, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@fb_comment_action, :comment) %>">
              <%= field_errors(@fb_comment_action, :comment) %>
              <%= f.text_field :comment, class: 'form-control', placeholder: t('activerecord.attributes.fb_comment_action.comment') %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :condition, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@fb_comment_action, :condition) %>">
              <%= field_errors(@fb_comment_action, :condition) %>
              <%= f.select :condition, FbCommentAction.conditions_i18n.keys.map {|k| [FbCommentAction.conditions_i18n[k], k]},
                           {:prompt => t('controls.select.none')}, {class: 'form-control'} %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :action_type, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@fb_comment_action, :action_type) %>">
              <%= field_errors(@fb_comment_action, :action_type) %>
              <%= f.select :action_type, FbCommentAction.action_types_i18n.keys.map {|k| [FbCommentAction.action_types_i18n[k], k]},
                           {:prompt => t('controls.select.none')}, {class: 'form-control'} %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :reply_txt, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@fb_comment_action, :reply_txt) %>">
              <%= field_errors(@fb_comment_action, :reply_txt) %>
              <%= f.text_field :reply_txt, class: 'form-control', placeholder: t('activerecord.attributes.fb_comment_action.reply_txt') %>
            </div>
          </div>

          <div class="action-buttons">
            <%= f.submit t('controls.button.save'), class: 'btn btn-warning' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
</div>
