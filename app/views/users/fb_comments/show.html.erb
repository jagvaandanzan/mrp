<div class="content-wrapper">
  <%= render 'layouts/flash_message' %>

  <section class="content-header align-left padding-15">
    <h1> <%= t('activerecord.models.fb_comment') %> </h1>
  </section>

  <div class="action-buttons">
    <% if can? :manage, FbComment %>
      <%= link_to t('controls.button.delete'), users_fb_comment_path(@fb_comment), method: :delete, data: {confirm: t('are_you_sure')}, class: 'btn btn-danger' %>
    <% end %>
    <%= link_to t('titles.back_to_list'), users_fb_comments_path(page: cookies[:fb_comment_page_number]), {class: "btn blck-btn"} %>
  </div>
  <%= show_body do %>
    <div class="box">
      <div class="box-body table-responsive no-padding">
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.fb_comment.fb_post_id') %> :</div>
          <div class="col-data"><%= @fb_comment.fb_post.full_name %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.fb_comment.user_name') %> :</div>
          <div class="col-data"><%= @fb_comment.user_name %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.fb_comment.message') %> :</div>
          <div class="col-data"><%= @fb_comment.message %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.fb_comment.date') %> :</div>
          <div class="col-data"><%= @fb_comment.date.strftime('%F %R') %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.fb_comment.reply_comment') %> :</div>
          <div class="col-data">
            <%= link_to edit_users_fb_comment_path(@fb_comment) do %>
              <button type="button" class="btn btn-sm btn-info"><%= t('activerecord.attributes.fb_comment.reply_comment') %></button>
            <% end %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.fb_comment.reply_text') %> :</div>
          <div class="col-data">
            <%= link_to messages_users_fb_comments_path(id: @fb_comment.id) do %>
              <button type="button" class="btn btn-sm btn-info"><%= t('activerecord.attributes.fb_comment.reply_text') %></button>
            <% end %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
