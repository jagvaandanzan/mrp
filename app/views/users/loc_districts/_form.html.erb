<div class="content-wrapper">
  <section class="content-header">
    <h1><%= t('activerecord.models.loc_district') + t(@loc_district.persisted? ? 'titles.edit' : 'titles.add') %></h1>
  </section>

  <section class="content">
    <div class="box box-info">
      <%= form_with model: @loc_district, url: @loc_district.persisted? ? users_loc_district_path : users_loc_districts_path, method: @loc_district.persisted? ? :patch : :post, local: true, :html => {class: 'form-horizontal'} do |f| %>
        <%= form_body do %>

          <div class="form-group">
            <%= f.label :name, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@loc_district, :name) %>">
              <%= field_errors(@loc_district, :name) %>
              <%= f.text_field :name, class: 'form-control', placeholder: t('activerecord.attributes.user.name') %>
            </div>
          </div>

          <div class="action-buttons">
            <%= f.submit t('controls.button.save'), class: 'btn btn-warning' %>
          </div>

        <% end %>
      <% end %>
    </div>
  </section>
</div>