<div class="content-wrapper">
  <section class="content-header align-left padding-15 m-b-5">
    <h1> <%= t('titles.loc_districts') %> </h1>
  </section>

  <div class="action-buttons">
    <%= link_to t('controls.button.create'), new_users_loc_district_path, class: 'btn btn-warning' %>
  </div>
  <section class="content container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body table-responsive no-padding">

            <%= render 'layouts/flash_message' %>

            <table class="table table-hover">
              <tr>
                <th class="th-email"><%= t('activerecord.attributes.loc_district.name') %></th>
                <th class="th-email"><%= t('titles.loc_khoroos') %></th>
                <th></th>
              </tr>
              <% @loc_districts.each do |loc_district| %>
                <tr>
                  <td class="va-mid underline"><%= link_to loc_district.name, users_loc_khoroos_path(id: loc_district.id) %></td>
                  <td class="va-mid"><%= loc_district.loc_khoroos.count %></td>
                  <td>
                    <div class="btn-group">
                      <%= link_to edit_users_loc_district_path(loc_district), class: 'no-underline' do %>
                        <%= button_tag t('controls.button.edit'), class: "btn-sm btn-info" %>
                      <% end %>

                      <%= link_to users_loc_district_path(loc_district), class: 'no-underline', :method => :delete, data: {confirm: t('are_you_sure')} do %>
                        <%= button_tag t('controls.button.delete'), class: "btn-sm btn-danger" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
        <%= paginate @loc_districts %>
      </div>
    </div>
  </section>
</div>