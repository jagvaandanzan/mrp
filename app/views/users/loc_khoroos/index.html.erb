<div class="content-wrapper index">
  <%= render 'layouts/breadcrumbs', data: [
      [users_loc_districts_path, t('titles.loc_districts')],
      [users_loc_khoroos_path(id: @loc_district.id), @loc_district.name], t('titles.loc_khoroos')] %>

  <section class="content-header align-left with-breadcrumbs">
    <h4> (<%= t('titles.total') %>ï¼š<%= @loc_khoroos.total_count %>)</h4>
  </section>

  <div class="action-buttons">
    <%= form_with url: users_loc_khoroos_path, method: "get", class: 'form-horizontal', local: true do |f| %>
      <%= hidden_field_tag :id, @loc_district.id %>
      <%= text_field_tag :loc_khoroo_name, @search_name, {class: 'form-control search'} %>
      <%= submit_tag t('controls.button.searching'), :class => 'btn blck-btn' %>
      <%= link_to t('controls.button.create'), new_users_loc_khoroo_path(id: @loc_district.id), class: 'btn btn-warning' %>
    <% end %>
  </div>

  <section class="content container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <%= render 'layouts/flash_message' %>

          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tr>
                <th class="th-center va-mid"><%= t('activerecord.attributes.loc_khoroo.name') %></th>
                <th class="th-center va-mid"></th>
              </tr>
              <% @loc_khoroos.each_with_index do |loc_khoroo, index| %>
                <tr>
                  <td class="va-mid underline"><%= link_to loc_khoroo.name, users_locations_path(id: loc_khoroo.id) %></td>
                  <td>
                    <div class="btn-loc_khoroo">
                      <%= link_to edit_users_loc_khoroo_path(loc_khoroo), class: 'no-underline' do %>
                        <%= button_tag t('controls.button.edit'), class: "btn-sm btn-info" %>
                      <% end %>

                      <%= link_to users_loc_khoroo_path(loc_khoroo), class: 'no-underline', :method => :delete, data: {confirm: t('are_you_sure')} do %>
                        <%= button_tag t('controls.button.delete'), class: "btn-sm btn-danger" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
        <%= paginate @loc_khoroos %>
      </div>
    </div>
  </section>
</div>
