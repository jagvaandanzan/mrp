<div class="content-wrapper">
  <section class="content-header align-left padding-15">
    <h1> <%= t('titles.operators') %> (<%= t('titles.total') %>ï¼š<%= @operators.total_count %>)</h1>
  </section>

  <div class="action-buttons">
    <%= link_to t('controls.button.create'), new_users_operator_path, class: 'btn btn-warning' %>

    <%= button_tag t('controls.button.search'), class: 'btn blck-btn', data: {toggle: 'modal', target: '#model-operator-search'} %>
  </div>

  <section class="content container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <%= get_search_criteria([@sname, t('activerecord.attributes.operator.name')], [@semail, t('activerecord.attributes.operator.email')], [@sphone, t('activerecord.attributes.operator.phone')]) %>

          <%= render 'layouts/flash_message' %>

          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tr>
                <th class="th-center va-mid"><%= t('activerecord.attributes.operator.name') %></th>
                <th class="th-center va-mid"><%= t('activerecord.attributes.operator.email') %></th>
                <th class="th-center va-mid"><%= t('activerecord.attributes.operator.phone') %></th>
                <th class="th-center va-mid"></th>
              </tr>
              <% @operators.each do |operator| %>
                <tr>
                  <td class="td-center va-mid underline"><%= link_to operator.name, users_operator_path(operator) %></td>
                  <td class="td-center va-mid"><%= operator.email %></td>
                  <td class="td-center va-mid"><%= operator.phone %></td>
                  <td class="td-center va-mid">
                    <%= link_to t('titles.operator_sign_in'), operator_sign_in_users_operator_path(operator), class: 'btn-sm btn-primary no-underline', target: '_blank' %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
        <%= paginate @operators %>
      </div>
    </div>
  </section>
  <%= render 'modal_operator_search', search_name: @sname, search_email: @semail , search_phone: @sphone %>
</div>
