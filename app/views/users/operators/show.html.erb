<div class="content-wrapper">
  <%= render 'layouts/flash_message' %>

  <section class="content-header align-left padding-15">
    <h1> <%= t('titles.operator_show') %> </h1>
  </section>

  <div class="action-buttons">
    <% if can? :manage, Operator %>
      <%= link_to t('controls.button.edit'), edit_users_operator_path(@operator), class: 'btn btn-info' %>
      <%= link_to t('controls.button.delete'), users_operator_path(@operator), method: :delete, data: {confirm: t('are_you_sure')}, class: 'btn btn-danger' %>
    <% end %>
    <%= link_to t('titles.back_to_list'), users_operators_path(page: cookies[:operator_page_number]), {class: "btn blck-btn"} %>
  </div>
  <%= show_body do %>
    <div class="box">
      <div class="box-body table-responsive no-padding">
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.operator.surname') %> :</div>
          <div class="col-data"><%= @operator.surname %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.operator.name') %> :</div>
          <div class="col-data"><%= @operator.name %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.operator.gender') %> :</div>
          <div class="col-data"><%= @operator.gender_i18n %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.operator.email') %> :</div>
          <div class="col-data"><%= @operator.email %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.operator.phone') %> :</div>
          <div class="col-data"><%= @operator.phone.presence || :'---' %></div>
        </div>
        <div class="m30">
          <div class="align-left"><%= t('activerecord.attributes.operator.operator_permission_rels') %> :</div>
          <div class="col-data">
            <table class="table table-bordered">
              <thead>
              <tr>
                <th><%= t('activerecord.attributes.operator_permission_rel.operator_permission_id') %></th>
                <th><%= t('activerecord.attributes.operator_permission_rel.role') %></th>
              </tr>
              </thead>
              <tbody>
              <% @operator.operator_permission_rels.each do |r| %>
                <tr>
                  <td class="va-mid"><%= r.operator_permission.description %></td>
                  <td class="va-mid"><%= r.role_i18n %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
