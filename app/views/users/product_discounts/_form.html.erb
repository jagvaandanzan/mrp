<div class="content-wrapper">
  <section class="content-header">
    <h1><%= @product_discount.product.name %>
      : <%= t('activerecord.models.product_dicount') + t(@product_discount.persisted? ? 'titles.edit' : 'titles.add') %></h1>
  </section>

  <section class="content">
    <div class="box box-info">
      <%= form_with model: @product_discount, url: @product_discount.persisted? ? users_product_discount_path : users_product_discounts_path, method: @product_discount.persisted? ? :patch : :post, local: true, :html => {class: 'form-horizontal'} do |f| %>
        <%= form_body do %>
          <%= f.hidden_field :product_id %>
          <div class="form-group">
            <%= f.label :percent, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@product_discount, :percent) %>">
              <%= field_errors(@product_discount, :percent) %>
              <%= f.number_field :percent, step: 1, class: 'form-control', placeholder: t('activerecord.attributes.product_discount.percent') %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :start_date, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@product_discount, :start_date) %>">
              <div class="input-append input-group date <%= get_error_class(@product_discount, :start_date) %>" data-provide="datepicker">
                <%= field_errors(@product_discount, :start_date) %>
                <%= f.text_field :start_date, value: @product_discount.start_date, class: 'field form-control', placeholder: t('activerecord.attributes.product_discount.start_date'), autocomplete: "off" %>
                <div class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :end_date, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@product_discount, :end_date) %>">
              <div class="input-append input-group date <%= get_error_class(@product_discount, :end_date) %>" data-provide="datepicker">
                <%= field_errors(@product_discount, :end_date) %>
                <%= f.text_field :end_date, value: @product_discount.end_date, class: 'field form-control', placeholder: t('activerecord.attributes.product_discount.end_date'), autocomplete: "off" %>
                <div class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                </div>
              </div>
            </div>
          </div>

          <div class="action-buttons">
            <%= f.submit t('controls.button.save'), class: 'btn btn-warning' %>
          </div>

        <% end %>
      <% end %>
    </div>
  </section>
</div>