
<div class="content-wrapper">

  <section class="content">
    <div class="box box-info">
      <%= form_with model: @product_feature, url: @product_feature.persisted? ? users_product_feature_path : users_product_features_path,
                    method: @product_feature.persisted? ? :patch : :post, local: true, :html => {class: 'form-horizontal'} do |f| %>
        <%= form_body do %>
          <div class="form-group">
            <%= f.label :name, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@product_feature, :name) %>">
              <%= field_errors(@product_feature, :name) %>
              <%= f.text_field :name, class: 'form-control', placeholder: t('activerecord.attributes.product_feature.name') %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@product_feature, :description) %>">
              <%= field_errors(@product_feature, :description) %>
              <%= f.text_area :description, class: 'form-control', placeholder: t('activerecord.attributes.product_feature.description') %>
            </div>
          </div>

          <div class="action-buttons">
            <%= f.submit t('controls.button.save'), class: 'btn btn-warning' %>
            <%= link_to t('titles.back_to_list'), users_product_features_path(page: cookies[:page_number]), {class: "btn blck-btn"} %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
</div>