<% content_for :stylesheets do -%>
  <%= stylesheet_link_tag "search" %>
  <%= stylesheet_link_tag "list" %>
<% end %>
<div class="content-wrapper">

  <div class="col-md-12 m-t-10 m-b-10">
    <%= form_with url: users_product_samples_path, method: "get", class: "", local: true do |f| %>
      <div class="col-md-2 search">
        <div id="search-date" class="form-control search">
          <i class="fa fa-calendar fa-lg p-r-0"></i>
          <span><%= t("filters.by_date") %>...</span>
          <%= f.hidden_field :by_start, value: @by_start %>
          <%= f.hidden_field :by_end, value: @by_end %>
        </div>
      </div>
      <div class="col-md-2 search">
        <%= text_field_tag :by_code, @by_code, {class: 'form-control', placeholder: t('filters.by_code')} %>
      </div>
      <div class="col-md-2 search">
        <%= text_field_tag :by_product_name, @by_product_name, {class: 'form-control search', placeholder: t('filters.by_product')} %>
      </div>
      <div class="col-md-6 search">
        <%= submit_tag t('controls.button.searching'), :class => 'btn blck-btn pull-left' %>
        <% if can? :create, ProductSample %>
          <%= link_to t('controls.button.create'), new_users_product_sample_path, class: 'btn btn-warning pull-right' %>
        <% end %>
      </div>
    <% end %>
  </div>

  <section class="content container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="box" id="div_list">
          <div class="box-body table-responsive no-padding">
            <%= render 'layouts/flash_message' %>
            <table class="table table-hover table-bordered">
              <tr>
                <th><%= t('activerecord.attributes.product_supply_order.ordered_date') %></th>
                <th><%= t('activerecord.attributes.product_supply_order.code') %></th>
                <th><%= t('activerecord.attributes.product_supply_order_item.product_id') %></th>
                <th><%= t('activerecord.attributes.product_supply_order_item.sum_price') %></th>
                <th><%= t('titles.total_tugrug') %></th>
                <th><%= t('activerecord.attributes.product_supply_order.payment') %></th>
              </tr>
              <% @product_supply_order_items.each_with_index do |i, index| %>
                <% supply_order = i.product_sample %>
                <tr>
                  <td class="va-mid"><%= supply_order.ordered_date.strftime('%F') %></td>
                  <td class="va-mid"><%= link_to supply_order.code, users_product_sample_path(supply_order, tab_index: index + 1) %></td>
                  <td class="va-mid"><%= i.product.name_with_code %></td>
                  <td class="va-mid"><%= i.get_currency i.sum_price %></td>
                  <td class="va-mid"><%= get_currency_mn i.sum_tug %></td>
                  <td class="va-mid"><%= supply_order.payment_i18n %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>

        <%= paginate @product_supply_order_items %>
      </div>
    </div>
  </section>
</div>
<%= render 'shared/date-range', search_field_id: 'search-date', start_id: 'by_start', finish_id: 'by_end' %>