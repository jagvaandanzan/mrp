<div class="content-wrapper index">
  <section class="content-header align-left padding-15 m-b-5">
    <h1> <%= t('titles.product_suppliers') %> </h1>
  </section>

  <% is_manage = can? :manage, ProductSupplier %>
  <div class="action-buttons index">
    <%= form_with url: users_product_suppliers_path, method: "get", class: 'form-horizontal', local: true do |f| %>
      <%= text_field_tag :supplier_name, @search_name, {class: 'form-control search'} %>
      <%= submit_tag t('controls.button.searching'), :class => 'btn blck-btn' %>
      <% if is_manage %>
        <%= link_to t('controls.button.create'), new_users_product_supplier_path, class: 'btn btn-warning' %>
      <% end %>
    <% end %>
  </div>

  <section class="content container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body table-responsive no-padding">

            <%= render 'layouts/flash_message' %>

            <table class="table table-hover">
              <tr>
                <th class="th-email"><%= t('activerecord.attributes.product_supplier.code') %></th>
                <th class="th-email"><%= t('activerecord.attributes.product_supplier.name') %></th>
                <% if is_manage %>
                  <th class="th-email"></th>
                <% end %>
              </tr>
              <% @product_suppliers.each do |s| %>
                <tr>
                  <td class="va-mid"><%= link_to s.code, users_product_supplier_path(s) %></td>
                  <td class="va-mid"><%= s.name %></td>
                  <% if is_manage %>
                    <td>
                      <div class="btn-group">
                        <%= link_to edit_users_product_supplier_path(s), class: 'no-underline' do %>
                          <%= button_tag t('controls.button.edit'), class: "btn-sm btn-info" %>
                        <% end %>

                        <%= link_to users_product_supplier_path(s), class: 'no-underline', :method => :delete, data: {confirm: t('are_you_sure')} do %>
                          <%= button_tag t('controls.button.delete'), class: "btn-sm btn-danger" %>
                        <% end %>
                      </div>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
        <%= paginate @product_suppliers %>
      </div>
    </div>
  </section>
</div>