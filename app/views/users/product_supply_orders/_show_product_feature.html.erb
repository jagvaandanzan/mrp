<div class="body-box">
  <div class="row">
    <div class="col-md-12 field_div cocoon-nested-form">
      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <% if is_basic %>
            <th class="text-center"><%= t('activerecord.attributes.product_feature_item.image') %></th>
          <% end %>
          <th class="text-center"><%= t('activerecord.attributes.product_supply_feature.feature_item_id') %></th>
          <th class="text-center"><%= t('activerecord.attributes.product_supply_feature.quantity') %></th>
          <th class="text-center"><%= t('activerecord.attributes.product_supply_feature.price') %></th>
          <th class="text-center"><%= t('activerecord.attributes.product_supply_feature.note') %></th>
        </tr>
        </thead>
        <tbody>
        <% order_item.supply_features.each {|feature| %>
          <tr class="field_div">
            <% if is_basic %>
              <td>
                <% if feature.feature_item.img.present? %>
                  <%= link_to feature.feature_item.img.url, "data-lightbox": "roadtrip" do %>
                    <%= image_tag feature.feature_item.img.url(:tumb), class: 'tumb' %>
                  <% end %>
                <% end %>
              </td>
            <% end %>
            <td class="va-mid"><%= feature.feature_item.name %></td>
            <td class="va-mid text-center"><%= feature.quantity %></td>
            <td class="va-mid text-center"><%= feature.get_currency(feature.price) %></td>
            <td class="va-mid"><%= feature.note %></td>
          </tr>
        <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
