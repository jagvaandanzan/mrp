                              <script>getColorByBgColor("#p-<%= option.id %>", "<%= option.code %>");</script>
                            <% else %>
                              <%= option.name %>
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
            <% } %>
          <% end %>
        <% } %>
