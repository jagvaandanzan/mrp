                      <div class="col-md-2">
                        <div class="checkbox" style="position: relative; display: block; overflow: hidden;  height: 34px;font-size: 11px">
                          <%= label_tag do %>
                            <%= f.check_box(:option_rels, {:multiple => true}, option.id.to_s, nil) %>
