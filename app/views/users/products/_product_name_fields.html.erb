<div class="form-group">
  <%= f.label :name, class: 'col-sm-3 control-label' do %>
    <%= ProductName.n_types_i18n[f.object.n_type] %>
    <i class="fa fa-info-circle blue" data-toggle="tooltip" title="<%= Const::PRODUCT_NAME[ProductName.n_types[f.object.n_type]] %>"></i>
  <% end %>
  <div class="col-sm-9 field_div <%= get_error_class(f.object, :name) %>">
    <%= field_errors f.object, :name %>
    <%= f.text_field :name, {class: 'form-control field', placeholder: ProductName.n_types_i18n[f.object.n_type]} %>
    <%= f.hidden_field :n_type %>
  </div>
</div>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>