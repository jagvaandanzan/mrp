<div class="content-wrapper">
  <section class="content-header">
    <h1><%= t('activerecord.models.size_instruction') + t(@size_instruction.persisted? ? 'titles.edit' : 'titles.add') %></h1>
  </section>
  <section class="content">
    <div class="box box-info">
      <%= form_for :size_instruction, url: @size_instruction.persisted? ? users_size_instruction_path : users_size_instructions_path, method: @size_instruction.persisted? ? :patch : :post, local: true, :html => {class: 'form-horizontal'} do |f| %>
        <%= form_body do %>
          <div class="form-group">
            <%= f.label :queue, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@size_instruction, :queue) %>">
              <%= field_errors(@size_instruction, :queue) %>
              <%= f.number_field :queue, class: 'form-control', min: 0, step: 1, placeholder: t('activerecord.attributes.size_instruction.queue') %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :instruction, class: 'col-sm-3 control-label' %>
            <div class="col-sm-9 <%= get_error_class(@size_instruction, :instruction) %>">
              <%= field_errors(@size_instruction, :instruction) %>
              <%= f.text_field :instruction, class: 'form-control', placeholder: t('activerecord.attributes.size_instruction.instruction') %>
            </div>
          </div>

          <div class="action-buttons">
            <%= f.submit t('controls.button.save'), class: 'btn btn-warning' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
</div>